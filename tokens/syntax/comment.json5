// Code comments, you can target single, block, and documentation type comments
{
  "syntax": {
    "comment": {
      // Using * will work like apply to all nested scopes
      "*": { "value": "{color.font.code.comment}" },
      "line": {
        "value": "{color.font.code.comment}",
        "fontStyle": "italic"
      },
      "block": {
        "documentation": { "value": "{color.font.code.comment}" }
      },
      "single": {
        "value": "{color.font.code.comment}",
        "fontStyle": "italic",
      },
    },
  }
}
